<mapper namespace="com.green.team4.mapper.sb.ProductInfoImgMapper">

    <insert id="insert">
        insert into tbl_product_infoImg (pno, pName, pInformation, pInfoPath)
        values (#{pno}, #{pName}, #{pInformation}, #{pInfoPath})
    </insert>

    <select id="getAll" resultType="com.green.team4.vo.sb.ProductInfoImgVO">
        select * from tbl_product_infoImg
    </select>

    <select id="getOne" resultType="com.green.team4.vo.sb.ProductInfoImgVO">
        select * from tbl_product_infoImg where pno = #{pno}
    </select>

