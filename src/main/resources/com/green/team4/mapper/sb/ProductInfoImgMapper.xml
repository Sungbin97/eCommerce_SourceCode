    <select id="getProductInfoImgs" resultType="com.green.team4.vo.sb.ProductImgVO">
        <!-- pno를 통한 상품 이미지리스트 조회 -->
        select p.pno, p.pname, i.pOriginal, i.pThumbnail, i.pInformation from  tbl_product p
        inner join tbl_product_infoImg i
        on p.pno = #{p.pno};
    </select>

